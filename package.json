{
  "name": "@evyweb/next-server-action-scan",
  "version": "1.0.0",
  "description": "List all your server actions of your NextJS project",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "bin": {
    "next-server-action-scan": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "changeset": "npx changeset",
    "changeset:version": "npx changeset version",
    "publish:package": "npm run build && npx changeset publish",
    "start": "npm run build && node dist/index.js"
  },
  "keywords": [],
  "author": "Evyweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Evyweb/next-server-action-scan.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.1",
    "jest-extended": "^4.0.2",
    "ts-morph": "^23.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vitest-mock-extended": "^2.0.2"
  }
}
